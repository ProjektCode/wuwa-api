# Server
HOST=0.0.0.0
PORT=3000
NODE_ENV=production

# Data paths
DATA_ROOT=assets/data
IMAGES_ROOT=assets/images

# Rate limiting
RATE_LIMIT_WINDOW=1 minute
RATE_LIMIT_LIST_MAX=15
RATE_LIMIT_DETAIL_MAX=60
RATE_LIMIT_IMAGE_MAX=60
RATE_LIMIT_DOCS_MAX=120

# CORS
# Comma-separated allowlist for browser requests. (curl/server-to-server are unaffected.)
# Example: https://example.com,https://mysite.github.io
CORS_ALLOWED_ORIGINS=

# Demo (local only)
ENABLE_DEMO=false
